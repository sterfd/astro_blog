---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
    firstName: "Stef",
    country: "Canada",
    occupation: "Developer",
    hobbies: ["volleyball", "climbing", "cycling"],
};

const skills = ["Python", "React", "Node", "HTML/CSS"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<style define:vars={{ skillColor, fontWeight, textCase }}>
    h1 {
        color: purple;
        font-size: 4rem;
    }
    .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
    }
</style>

<BaseLayout pageTitle={pageTitle}>
    <h2>... and my new Astro site!</h2>

    <p>
        I am working thorugh Astro's intro tutoria. this is the 2nd page and I
        built it!
    </p>
    <p>This site will update as I complete more tutorial</p>
    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}</li>
        <li>
            I live in {identity.country} and trying to get a job as a {
                identity.occupation
            }
        </li>
        {
            identity.hobbies.length >= 2 && (
                <li>
                    Two of my hobbies are: {identity.hobbies[0]} and{" "}
                    {identity.hobbies[1]}
                </li>
            )
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}
    {finished && <p>I finished this tutorial!</p>}
    {
        goal === 3 ? (
            <p>My goal is to finish in 3 days!</p>
        ) : (
            <p>My goal is not 3 days.</p>
        )
    }
</BaseLayout>
