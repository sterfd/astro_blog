---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allThoughts = await getCollection("thoughts");
const pageTitle = "Small Thoughts and Notes";
const headerID = "thoughts-title";
---

<BaseLayout pageTitle={pageTitle} header={headerID}>
    <p>These are some scattered thoughts or notes I'm keeping on projects:</p>
    <ul>
        {
            allThoughts
                .map((post) => (
                    <BlogPost
                        url={`/thoughts/${post.slug}`}
                        title={post.data.title}
                        date={post.data.pubDate}
                    />
                ))
                .reverse()
        }
    </ul>
</BaseLayout>
